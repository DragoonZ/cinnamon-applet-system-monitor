{
	"interval": {
		"type": "spinbutton",
		"default": 1000,
		"min": 750,
		"max": 5000,
		"step": 50,
		"units": "ms",
		"description": "Interval"
	},
	"byte-unit": {
		"type": "combobox",
		"default": true,
		"options": {
			"Bytes with binary prefix": true,
			"Bytes with decimal prefix": false
		},
		"description": "Bytes unit"
	},
	"rate-unit": {
		"type": "combobox",
		"default": 1,
		"options": {
			"Bytes with binary prefix per second": 1,
			"Bytes with decimal prefix per second": 0,
			"Bits with binary prefix per second": 3,
			"Bits with decimal prefix per second": 2
		},
		"description": "Rates unit"
	},
	"thermal-unit": {
		"type": "combobox",
		"default": true,
		"options": {
			"\u00b0C": true,
			"\u00b0F": false
		},
		"description": "Thermal unit"
	},
	"maxsize": {
		"type": "spinbutton",
		"default": 2000,
		"min": 1000,
		"max": 10000,
		"step": 100,
		"units": " ",
		"description": "Maximal size"
	},
	"order": {
		"type": "combobox",
		"default": true,
		"options": {
			"Write - Read / Up - Down": true,
			"Read - Write / Down - Up": false
		},
		"description": "Order of Disk and Network items"
	},
	"thermal-mode": {
		"type": "combobox",
		"default": 1,
		"options": {
			"Disabled": 0,
			"Minimum": 1,
			"Average": 2,
			"Maximum": 3
		},
		"description": "Thermal mode"
	},
	"graph": {
		"type": "separator"
	},
	"graph-type": {
		"type": "combobox",
		"default": 0,
		"options": {
			"None": -1,
			"Pie": 0,
			"Arc": 1,
			"CPU History": 2,
			"Memory History": 3,
			"Disk History": 4,
			"Network History": 5,
			"Thermal History": 6
		},
		"description": "Type of graph"
	},
	"graph-size": {
		"type": "spinbutton",
		"default": 100,
		"min": 100,
		"max": 400,
		"step": 10,
		"units": "px",
		"description": "Height of graph"
	},
	"graph-steps": {
		"type": "spinbutton",
		"default": 60,
		"min": 5,
		"max": 200,
		"step": 5,
		"units": " ",
		"description": "Ammount of history steps"
	},
	"graph-appearance": {
		"type": "combobox",
		"default": 0,
		"options": {
			"Line": 0,
			"Area": 1,
			"Bar": 2
		},
		"description": "Appearance of history graphs"
	},
	"graph-connection": {
		"type": "combobox",
		"default": 0,
		"options": {
			"Line": 0,
			"Straight": 1,
			"Curve": 2
		},
		"description": "Connection type for Line or Area"
	},
	"graph-interval": {
		"type": "spinbutton",
		"default": 1000,
		"min": 50,
		"max": 5000,
		"step": 50,
		"units": "ms",
		"description": "History graphs draw interval"
	},
	"thermal": {
		"type": "colorchooser",
		"default": "rgba(238, 80, 29, 1)",
		"description": "Thermal"
	},
	"write": {
		"type": "colorchooser",
		"default": "rgba(238, 29, 0, 1)",
		"description": "Write / Up"
	},
	"read": {
		"type": "colorchooser",
		"default": "rgba(45, 125, 179, 1)",
		"description": "Read / Down"
	},
	"cpu1": {
		"type": "colorchooser",
		"default": "rgba(255, 110, 0, 1)",
		"description": "CPU1"
	},
	"cpu2": {
		"type": "colorchooser",
		"default": "rgba(203, 12, 41, 1)",
		"description": "CPU2"
	},
	"cpu3": {
		"type": "colorchooser",
		"default": "rgba(73, 168, 53, 1)",
		"description": "CPU3"
	},
	"cpu4": {
		"type": "colorchooser",
		"default": "rgba(45, 125, 179, 1)",
		"description": "CPU4"
	},
	"mem": {
		"type": "colorchooser",
		"default": "rgba(171, 24, 82, 1)",
		"description": "Memory"
	},
	"swap": {
		"type": "colorchooser",
		"default": "rgba(73, 168, 53, 1)",
		"description": "Swap"
	},
	"notifications": {
		"type": "separator"
	},
	"notificationinfo": {
		"type": "header",
		"description": "The unit int equals one interval"
	},
	"cpu-warning": {
		"type": "checkbox",
		"default": false,
		"description": "enable CPU warning"
	},
	"cpu-warning-time": {
		"type": "spinbutton",
		"min": 1,
		"max": 40,
		"default": 5,
		"step": 1,
		"units": "int",
		"description": "Warning time",
		"indent": true,
		"dependency": "cpu-warning"
	},
	"cpu-warning-mode": {
		"type": "checkbox",
		"default": true,
		"description": "Use average CPU usage",
		"indent": true,
		"dependency": "cpu-warning"
	},
	"cpu-warning-value": {
		"type": "spinbutton",
		"min": 50,
		"max": 100,
		"default": 100,
		"step": 0.5,
		"units": "%",
		"description": "Warning CPU usage",
		"indent": true,
		"dependency": "cpu-warning"
	},
	"thermal-warning": {
		"type": "checkbox",
		"default": false,
		"description": "enable thermal warning"
	},
	"thermal-warning-time": {
		"type": "spinbutton",
		"min": 1,
		"max": 40,
		"default": 5,
		"step": 1,
		"units": "int",
		"description": "Warning time",
		"indent": true,
		"dependency": "thermal-warning"
	},
	"thermal-warning-value": {
		"type": "spinbutton",
		"min": 25,
		"max": 200,
		"default": 50,
		"step": 0.5,
		"units": "\u00b0",
		"description": "Warning temperatur",
		"indent": true,
		"dependency": "thermal-warning"
	}
}
