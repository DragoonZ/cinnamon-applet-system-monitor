{
    "general-header": {
        "type": "header",
        "description": "General"
    },
    "show-icon": {
        "type": "checkbox",
        "default": true,
        "description": "Show icon"
    },
    "interval": {
        "type": "spinbutton",
        "default": 1000,
        "min": 720,
        "max": 5000,
        "step": 20,
        "units": "ms",
        "description": "Interval",
        "tooltip": "Interval in which the applet refreshes data"
    },
    "byte-unit": {
        "type": "combobox",
        "default": true,
        "options": {
            "B, KiB, MiB": true,
            "B, KB, MB": false
        },
        "description": "Bytes unit",
        "tooltip": "Unit for memory, swap, disk space and total network usage"
    },
    "rate-unit": {
        "type": "combobox",
        "default": 1,
        "options": {
            "B/s, KiB/s, MiB/s": 1,
            "B/s, KB/s, MB/s": 0,
            "bit/s Kibit/s, Mibit/s": 3,
            "bit/s Kbit/s, Mbit/s": 2
        },
        "description": "Rates unit",
        "tooltip": "Unit for disk and network usage"
    },
    "thermal-unit": {
        "type": "combobox",
        "default": true,
        "options": {
            "\u2103": true,
            "\u2109": false
        },
        "description": "Thermal unit"
    },
    "order": {
        "type": "combobox",
        "default": true,
        "options": {
            "Write - Read / Up - Down": true,
            "Read - Write / Down - Up": false
        },
        "description": "Order of Disk and Network items"
    },
    "graph": {
        "type": "separator"
    },
    "graph-header": {
        "type": "header",
        "description": "Graphs"
    },
    "graph-type": {
        "type": "combobox",
        "default": 0,
        "options": {
            "None": -1,
            "Overview": 0,
            "CPU History": 1,
            "Memory and Swap History": 2,
            "Disk History": 3,
            "Network History": 4,
            "Thermal History": 5
        },
        "description": "Type of graph",
        "tooltip": "The graph shown in the menu"
    },
    "graph-size": {
        "type": "spinbutton",
        "default": 200,
        "min": 100,
        "max": 400,
        "step": 10,
        "units": "px",
        "description": "Height of graph"
    },
    "graph-steps": {
        "type": "spinbutton",
        "default": 60,
        "min": 5,
        "max": 200,
        "step": 5,
        "units": " ",
        "description": "Number of history steps",
        "tooltip": "How many steps will be saved for history graphs"
    },
    "graph-overview": {
        "type": "combobox",
        "default": 0,
        "options": {
            "Pie": 0,
            "Arc": 1
        },
        "description": "Appearance of Overview graph"
    },
    "graph-connection": {
        "type": "combobox",
        "default": "line",
        "options": {
            "Line": "line",
            "Straight": "straight",
            "Curve": "curve"
        },
        "description": "Connection type for History graphs"
    },
    "loadAvg-section": {
        "type": "separator"
    },
    "loadAvg": {
        "type": "checkbox",
        "default": true,
        "description": "Load averages"
    },
    "loadAvg-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "loadAvg",
        "tooltip": "Common placeholders: \n %l0 \t load average for the last minute \n %l1 \t load average for the last 5 minutes \n %l2 \t load average for the last 15 minutes"
    },
    "cpu-section": {
        "type": "separator"
    },
    "cpu": {
        "type": "checkbox",
        "default": true,
        "description": "CPU"
    },
    "cpu-color-core1": {
        "type": "colorchooser",
        "default": "rgba(255, 110, 0, 1)",
        "description": "CPU1",
        "dependency": "cpu"
    },
    "cpu-color-core2": {
        "type": "colorchooser",
        "default": "rgba(203, 12, 41, 1)",
        "description": "CPU2",
        "dependency": "cpu"
    },
    "cpu-color-core3": {
        "type": "colorchooser",
        "default": "rgba(73, 168, 53, 1)",
        "description": "CPU3",
        "dependency": "cpu"
    },
    "cpu-color-core4": {
        "type": "colorchooser",
        "default": "rgba(45, 125, 179, 1)",
        "description": "CPU4",
        "dependency": "cpu"
    },
    "cpu-appearance": {
        "type": "combobox",
        "default": "area",
        "options": {
            "Line": "line",
            "Area": "area",
            "Stack": "stack",
            "Bar": "bar"
        },
        "description": "Appearance of history graphs",
        "dependency": "cpu"
    },
    "cpu-split": {
        "type": "combobox",
        "default": false,
        "options": {
            "Total usage": false,
            "User and System usage": true
        },
        "description": "Show which information in history graphs",
        "dependency": "cpu"
    },
    "cpu-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "cpu",
        "tooltip": "Common placeholders: \n %tn \t usage of core n (replace n with a number) \n %ta \t average usage"
    },
    "cpu-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "cpu"
    },
    "cpu-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true,
        "dependency": "cpu"
    },
    "cpu-warning": {
        "type": "checkbox",
        "default": false,
        "description": "Warning",
        "dependency": "cpu"
    },
    "cpu-warning-value": {
        "type": "spinbutton",
        "min": 50,
        "max": 100,
        "default": 100,
        "step": 0.5,
        "units": "%",
        "description": "Trigger value",
        "indent": true,
        "dependency": "cpu-warning"
    },
    "cpu-warning-time": {
        "type": "spinbutton",
        "min": 1,
        "max": 40,
        "default": 5,
        "step": 1,
        "units": "intervals",
        "description": "Time",
        "indent": true,
        "dependency": "cpu-warning"
    },
    "cpu-warning-mode": {
        "type": "combobox",
        "default": true,
        "options": {
            "Cores": false,
            "Average": true
        },
        "description": "Mode",
        "indent": true,
        "dependency": "cpu-warning"
    },
    "mem-section": {
        "type": "separator"
    },
    "mem": {
        "type": "checkbox",
        "default": true,
        "description": "Memory and Swap"
    },
    "mem-color-mem": {
        "type": "colorchooser",
        "default": "rgba(171, 24, 82, 1)",
        "description": "Memory",
        "dependency": "mem"
    },
    "mem-color-swap": {
        "type": "colorchooser",
        "default": "rgba(73, 168, 53, 1)",
        "description": "Swap",
        "dependency": "mem"
    },
    "mem-appearance": {
        "type": "combobox",
        "default": "area",
        "options": {
            "Line": "line",
            "Area": "area"
        },
        "description": "Appearance of history graphs",
        "dependency": "mem"
    },
    "mem-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "mem",
        "tooltip": "Common placeholders: \n %mu \t memory usage in bytes \n %pu \t memory usage in percent \n %su \t swap usage in bytes \n %sp \t swap usage in bytes"
    },
    "mem-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "mem"
    },
    "mem-panel-mode": {
        "type": "combobox",
        "default": 0,
        "options": {
            "only Memory": "mem",
            "Memory and Swap": "mem-swap"
        },
        "description": "Mode of graph",
        "indent": true,
        "dependency": "mem"
    },
    "mem-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true,
        "dependency": "mem"
    },
    "disk-section": {
        "type": "separator"
    },
    "disk": {
        "type": "checkbox",
        "default": true,
        "description": "Disk"
    },
    "disk-color-write": {
        "type": "colorchooser",
        "default": "rgba(238, 29, 0, 1)",
        "description": "Write",
        "dependency": "disk"
    },
    "disk-color-read": {
        "type": "colorchooser",
        "default": "rgba(45, 125, 179, 1)",
        "description": "Read",
        "dependency": "disk"
    },
    "disk-appearance": {
        "type": "combobox",
        "default": "areaUpDown",
        "options": {
            "Line": "line",
            "Area": "areaUpDown",
            "Bar": "bar"
        },
        "description": "Appearance of history graphs",
        "dependency": "disk"
    },
    "disk-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "disk",
        "tooltip": "Common placeholders: \n %rw \t write usage \n %rr \t read usage"
    },
    "disk-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "disk"
    },
    "disk-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true,
        "dependency": "disk"
    },
    "network-section": {
        "type": "separator"
    },
    "network": {
        "type": "checkbox",
        "default": true,
        "description": "Network"
    },
    "network-color-up": {
        "type": "colorchooser",
        "default": "rgba(238, 29, 0, 1)",
        "description": "Up",
        "dependency": "network"
    },
    "network-color-down": {
        "type": "colorchooser",
        "default": "rgba(45, 125, 179, 1)",
        "description": "Down",
        "dependency": "network"
    },
    "network-appearance": {
        "type": "combobox",
        "default": "areaUpDown",
        "options": {
            "Line": "line",
            "Area": "areaUpDown",
            "Bar": "bar"
        },
        "description": "Appearance of history graphs",
        "dependency": "network"
    },
    "network-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "network",
        "tooltip": "Common placeholders: \n %ru \t up usage \n %rd \t down usage"
    },
    "network-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "network"
    },
    "network-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true,
        "dependency": "network"
    },
    "thermal-section": {
        "type": "separator"
    },
    "thermal": {
        "type": "checkbox",
        "default": true,
        "description": "Thermal"
    },
    "thermal-color-thermal": {
        "type": "colorchooser",
        "default": "rgba(238, 80, 29, 1)",
        "description": "Thermal",
        "dependency": "thermal"
    },
    "thermal-mode": {
        "type": "combobox",
        "default": 3,
        "options": {
            "Minimum": 0,
            "Average": 1,
            "Maximum": 2
        },
        "description": "Thermal mode",
        "dependency": "thermal"
    },
    "thermal-appearance": {
        "type": "combobox",
        "default": "area",
        "options": {
            "Line": "line",
            "Area": "area"
        },
        "description": "Appearance of history graphs",
        "dependency": "thermal"
    },
    "thermal-panel-label": {
        "type": "entry",
        "default": "",
        "description": "Label in the panel",
        "dependency": "thermal",
        "tooltip": "Common placeholders: \n %t0 \t thermal value (specified in \"Thermal Mode\") \n %tn \t sensor temperature (replace n with a number)"
    },
    "thermal-panel-graph": {
        "type": "combobox",
        "default": -1,
        "options": {
            "None": -1,
            "Bar": 0,
            "History": 1
        },
        "description": "Graph in the panel",
        "dependency": "thermal"
    },
    "thermal-panel-width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "px",
        "description": "Width of graph",
        "indent": true,
        "dependency": "thermal"
    },
    "thermal-warning": {
        "type": "checkbox",
        "default": false,
        "description": "Warning",
        "dependency": "thermal"
    },
    "thermal-warning-value": {
        "type": "spinbutton",
        "min": 25,
        "max": 200,
        "default": 50,
        "step": 0.5,
        "units": "\u00b0",
        "description": "Trigger temperature",
        "indent": true,
        "dependency": "thermal-warning"
    },
    "thermal-warning-time": {
        "type": "spinbutton",
        "min": 1,
        "max": 40,
        "default": 5,
        "step": 1,
        "units": "intervals",
        "description": "Time",
        "indent": true,
        "dependency": "thermal-warning"
    },
    "help": {
        "type": "button",
        "description": "Read Readme",
        "tooltip": "Get useful information about the settings and the applet",
        "callback": "launchReadme"
    }
}
